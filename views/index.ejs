<style>
    body {
        background-color: snow;
    }
    main {
        max-width: 1000px;
        margin: 0 auto;
        text-align: center;
        padding: 30px;
    }
    h1 {
        font-size: 50px;
        font-family: 'Courier New', Courier, monospace;
        color: red;
    }
    textarea {
        width: 100%;
        resize: none;
        font-size: 20px;
        min-height: 120px;
        border-width: 3px;
        border-radius: 5px;
        padding: 10px;
    }
    textarea:focus {
        outline: none;
        border-color: tomato;
    }
    input {
        width: 50%;
        background-color: teal;
        color: white;
        font-size: 22px;
        padding: 20px;
        border: none;
        border-radius: 5px;
        margin-top: 50px;
        outline: none;
    }
    figcaption {
        font-size: 25px;
        font-family: Consolas;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .box {
        height: 200px;
        width: 200px;
        background-color: indianred;
        border-radius: 50%;
        position: relative;
        cursor: pointer;
        margin: 0 auto;
    }
    svg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        fill: snow;
    }
</style>

<main>
    <h1>Convert Text to Speech</h1>
    <form method="post" action="/">
        <textarea name="text"  cols="30" rows="10"></textarea>
        <input type="submit" value="Convert to Mp3" onclick="show()"/>
    </form>

    <figure>
        <figcaption>Click here to listen</figcaption>
        <audio
            id="audio"
            controls
            src="http://localhost:5000/audio/<%= filename %>">
                Your browser does not support the
                <code>audio</code> element.
        </audio>
        <div class="box" id="box" onclick="speech()">
            <svg xmlns="http://www.w3.org/2000/svg" width="89" height="89" viewBox="0 0 24 24"><path d="M5 17h-5v-10h5v10zm2-10v10l9 5v-20l-9 5zm11.008 2.093c.742.743 1.2 1.77 1.198 2.903-.002 1.133-.462 2.158-1.205 2.9l1.219 1.223c1.057-1.053 1.712-2.511 1.715-4.121.002-1.611-.648-3.068-1.702-4.125l-1.225 1.22zm2.142-2.135c1.288 1.292 2.082 3.073 2.079 5.041s-.804 3.75-2.096 5.039l1.25 1.254c1.612-1.608 2.613-3.834 2.616-6.291.005-2.457-.986-4.681-2.595-6.293l-1.254 1.25z"/></svg>
        </div>
        </figure>
</main>

<script>
    const audio = document.getElementById("audio");
    audio.style.display = "none";
    const svg = document.getElementsById("box");

   function speech() {
      audio.play();
   }
</script>
